@model IEnumerable<Webshop.ViewModels.CustomerOrderViewModel>

@{
    ViewData["Title"] = "Warenkorb";
}

@{
    Customer customer = @ViewBag.Customer;
    Order order = ViewBag.Order;
}

<div class="row pl-3">
    <div class="mb-5">
        <h1>Warenkorb</h1>
    </div>
</div>

<div class="row">
    <div class="col-sm-12 col-lg-3 mb-sm-3">
        <div>
            <h3>Lieferadresse</h3>
            <p>Sollte die Lieferadresse von der Rechnungsadresse abweichen können Sie diese hier ändern.</p>
        </div>
        <div class="form-group">
            <label for="title">Anrede</label>
            <input type="text" name="title" class="form-control" value="@customer.Title">
        </div>
        <form>
            <div class="form-group">
                <label for="firstName">Vorname</label>
                <input type="text" name="firstName" class="form-control" value="@customer.FirstName">
            </div>
            <div class="form-group">
                <label for="lastName">Nachname</label>
                <input type="text" name="lastName" class="form-control" value="@customer.LastName">
            </div>
            <div class="form-group">
                <label for="street">Straße und Nr.</label>
                <input type="text" name="street" class="form-control" value="@customer.Street">
            </div>
            <div class="form-group">
                <label for="zip">Postleitzahl</label>
                <input type="text" name="zip" class="form-control" value="@customer.Zip">
            </div>
            <div class="form-group">
                <label for="city">Stadt</label>
                <input type="text" name="city" class="form-control" value="@customer.City">
            </div>
        </form>
    </div>
    <div class="text-center col-sm-12 col-lg-7 mb-sm-3">
        <h3>Produkte</h3> <br />
        @foreach (var item in Model)
        {
            <div class="container">
                <div class="row" style="height:10rem">
                    <div class="d-flex col-6 justify-content-center align-items-center">
                        <a asp-controller="Product" asp-action="Details" asp-route-id="@item.ProductNumber">
                            <img src="@item.ImagePath" asp-append-version="true" alt="@item.Manufacturer @item.ProductName" style="height:8rem; width:auto" />
                        </a>
                    </div>
                    <div class="d-flex flex-column col-6 text-left justify-content-center">
                        <form>
                            <span>
                                <a asp-controller="Product" asp-action="Details" asp-route-id="@item.ProductNumber" class="noTextDecoration">
                                    <b class="noTextDecoration">@item.Manufacturer&nbsp;@item.ProductName</b>
                                </a>
                                <a asp-controller="ShoppingCart" asp-action="DeleteFromCart" asp-route-id="@item.ProductNumber"
                                   class="float-right warningColor productDetailsInCart noTextDecoration">
                                    <b>X</b>
                                </a>
                            </span>
                        </form>
                        <span class="">Produktnummer:&nbsp;@item.ProductNumber</span>
                        <span class="">Stück:&nbsp;@item.BruttoPrice&nbsp;€</span>
                        <span class="">Gesamt:&nbsp;@item.RowPrice&nbsp;€</span>
                        <form asp-controller="ShoppingCart" asp-action="DecrementValue" asp-route-id="@item.ProductNumber" method="post">
                            <span>
                                Menge
                                <select name="amountInCart" asp-items="@item.SelectList"
                                        class="form-control d-inline btn btn-outline-dark ml-2" style="width: 4rem;">
                                </select>
                                <input type="submit"
                                       class="btn btn-outline-dark text-center ml-2" value="Bestätigen">
                            </span>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="col-sm-12 col-xl-2 text-sm-center text-xl-right">
        <h3>Gesamtpreis</h3>
        <span style="font-size:1.3rem">@order.PriceTotal&nbsp;€</span>
        <div class="mt-3">
            <input type="submit" name="orderNow" value="Bestellen" class="btn btn-outline-success custom-btn-size" />
        </div>
    </div>
</div>

