@model IEnumerable<Webshop.ViewModels.CustomerOrderViewModel>

@{
    ViewData["Title"] = "Warenkorb";
}

@{ 
    Customer customer = @ViewBag.Customer;
}

@customer.FirstName @customer.LastName
<br />
<br />  

@foreach (var item in Model)
{
    <img src="@item.ImagePath" asp-append-version="true" alt="@item.Manufacturer @item.ProductName" style="height:100px; width:auto"/>

    <br />
    @item.Manufacturer @item.ProductName
    <br />
    @item.Orderline.Amount
    <br />
    @item.BruttoPrice
    <br />
    @item.RowPrice
    <br />
    <select name="miau" asp-items="@item.SelectList" class="form-control d-inline btn btn-outline-dark" style="width: 4rem"></select>
    <br />
}
