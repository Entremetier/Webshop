                                    <strong>@Html.DisplayFor(model => model.FirstName)&nbsp;@Html.DisplayFor(model => model.LastName)</strong><br>
                                    @Html.DisplayFor(model => model.Street)<br>
                                    @Html.DisplayFor(model => model.Zip)&nbsp;@Html.DisplayFor(model => model.City)
                                </td>
                                <td valign="top" width="35%">
