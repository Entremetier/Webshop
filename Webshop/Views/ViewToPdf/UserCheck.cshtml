                                            </tr>
                                            <tr>
                                                <td align="right" style="font-size:12px;"><b>Gesamtpreis</b></td>
                                                <td align="right" style="font-size:12px;"><b>@Html.DisplayFor(modelItem => modelItem.Order.PriceTotal)&nbsp;€</b></td>
                                            </tr>
