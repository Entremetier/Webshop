                                <td bordercolor="#ccc" bgcolor="#f2f2f2" style="font-size:12px;"><strong>Steuer in %</strong></td>
                            </tr>
                            <tr style="display:none;"><td colspan="*"></td></tr>
                            @foreach (var item in Model.OrderLines)
                            {
                                <tr>
                                    <td valign="top" style="font-size:12px;">@Html.DisplayFor(modelItem => item.Product.Manufacturer.Name)&nbsp;@item.Product.ProductName</td>
                                    <td valign="top" style="font-size:12px;">@item.Amount </td>
                                    <td valign="top" style="font-size:12px;">@item.NetUnitPrice </td>
                                    <td valign="top" style="font-size:12px;">@item.TaxRate </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <table width="100%" cellspacing="0" cellpadding="2" border="0">
                        <tbody>
                            <tr>
                                <td style="font-size:12px;width:50%;"><strong> </strong></td>
                                <td>
                                    <table width="100%" cellspacing="0" cellpadding="2" border="0">
