@model Webshop.Models.Product

@{
    ViewData["Title"] = "Tron";
}

<h1 class="mt-5">
    @Html.DisplayFor(model => model.Manufacturer.Name)
    @Html.DisplayFor(model => model.ProductName)
</h1>
<span style="font-size: 1.2rem">Preis:&nbsp;@Html.DisplayFor(model => model.NetUnitPrice)&nbsp;€</span>

<div class="col-5 offset-7 row pr-3">
    <form action="../Controllers/Home/Warenkorb" method="post" class="pr-3">
        <span>Menge:&nbsp;<select name="itemAmount" class="form-control" asp-items="@ViewBag.ItemAmount" style="width: 4rem"></select>&nbsp;</span>
        <input type="button" name="addToCartButton" value="In den Warenkorb legen" class="btn btn-outline-dark" />
    </form>
</div>

<hr class="mt-3" />

<div class="row" style="height:20rem">
    <div class="col-12 d-inline-flex justify-content-center align-items-center">
        <img src="@ViewBag.ImagePath" asp-append-version="true" alt="Test" id="productDetailsImage" />
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="justify-content-center mt-3">
            <p>@Html.DisplayFor(model => model.Description)</p>
        </div>
    </div>
    <div class="row">
        @*<a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |*@
        <a asp-action="Shop" class="noTextDecoration">Zurück zur Übersicht</a>
    </div>
</div>
