@model Webshop.Models.RegisterCustomer

@{
    ViewData["Title"] = "Registrieren";
}

<h1>Registrieren</h1>

<hr />

@if (TempData["UserExists"] != null)
{
    <div class="alert alert-danger col-md-6 col-sm-12 d-block mx-auto text-center">
        @TempData["UserExists"]
    </div>
}

<div class="row">
    <div class="col-md-6 col-sm-12 d-block mx-auto mt-3">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Title" class="form-control" placeholder="Anrede" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="FirstName" class="form-control" placeholder="Vorname" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="LastName" class="form-control" placeholder="Nachname" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Email" class="form-control" placeholder="E-Mail" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Street" class="form-control" placeholder="Straße" />
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Zip" class="form-control" placeholder="Postleitzahl" />
                <span asp-validation-for="Zip" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="City" class="form-control" placeholder="Stadt" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Password" class="form-control" type="password" placeholder="Passwort" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Passwort wiederholen" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <input class="form-check-input" type="checkbox" id="agbCheckbox">
                <label class="form-check-label">
                    Zum registrieren den 
                    <a asp-controller="Home" asp-action="AGB" class="noTextDecoration agbColor">AGB</a>
                    zustimmen!
                </label>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Registrieren" class="btn btn-outline-dark" id="registerBtn" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index" class="noTextDecoration">Zurück zur Startseite</a>
</div>

<script>
    const registerBtn = document.getElementById("registerBtn");
    const agbCheckBox = document.getElementById("agbCheckbox");

    // Button zu Beginn disablen
    registerBtn.disabled = true;

    // Wenn sich was an der Checkbox ändert registerButton aktivieren und deaktivieren
    agbCheckBox.addEventListener("change", (e) => {
        if (e.target.checked) {
            registerBtn.disabled = false;
        }
        else {
            registerBtn.disabled = true;
        }
    });
</script>