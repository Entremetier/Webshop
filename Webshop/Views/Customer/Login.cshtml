
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<div class="row">
    <div class="col-md-6 col-sm-12 d-block mx-auto">
        <form asp-action="Login">
            <div class="mt-3">
                <input name="email" placeholder="E-Mail" />
            </div>
            <div class="mt-3">
                <input name="password" placeholder="Passwort" />
            </div>
            <div class="form-group text-center mt-5">
                <input type="submit" value="Anmelden" class="btn btn-outline-dark" id="loginBtn" />
            </div>
        </form>
    </div>
</div>
