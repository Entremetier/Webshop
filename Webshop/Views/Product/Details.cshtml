@model Webshop.Models.Product

@{
    ViewData["Title"] = "Tron";
}

<h1>
    @Html.DisplayFor(model => model.Manufacturer.Name)
    @Html.DisplayFor(model => model.ProductName)
</h1>
<span style="font-size: 1.2rem">Preis:&nbsp;@Html.DisplayFor(model => model.NetUnitPrice)&nbsp;€</span>

<div class="row justify-content-end mr-2 mt-3">
    <span class="pt-2 mr-3">Menge:</span>
    <select asp-items="@ViewBag.ItemAmount" name="itemAmount" class="form-control d-inline btn btn-outline-dark" style="width: 4rem"></select>
    <form action="../Controllers/Home/Warenkorb" method="post" class="ml-3">
        <input type="button" name="addToCartButton" value="In den Warenkorb legen" class="btn btn-outline-dark" />
    </form>
</div>

<hr class="mt-3" />

<div class="row" style="height:20rem">
    <div class="col-12 d-inline-flex justify-content-center align-items-center">
        <img src="@ViewBag.ImagePath" asp-append-version="true" alt="@Html.DisplayFor(model => model.Manufacturer.Name) @Html.DisplayFor(model => model.ProductName)" id="productDetailsImage" />
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="justify-content-center mt-3">
            <p>@Html.DisplayFor(model => model.Description)</p>
        </div>
    </div>
    <div class="row">
        @*<a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |*@
        <a asp-controller="Home" asp-action="Shop" class="noTextDecoration">Zurück zur Übersicht</a>
    </div>
</div>

